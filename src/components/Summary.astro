---
import { portfolioData } from "../data/portfolio";
---

<section id="summary" class="section-padding bg-muted/30">
    <div class="container mx-auto px-6 lg:px-8">
        <div class="mx-auto max-w-3xl">
            <h2
                class="mb-8 text-3xl font-bold sm:text-4xl font-heading text-foreground"
            >
                {portfolioData.summary.title}
            </h2>

            <div class="space-y-6 text-lg text-foreground/90 leading-relaxed">
                {
                    portfolioData.summary.paragraphs.map((paragraph) => (
                        <p>{paragraph}</p>
                    ))
                }
            </div>
        </div>
    </div>
</section>
