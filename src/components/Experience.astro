---
import { portfolioData } from "../data/portfolio";
---

<section id="experience" class="section-padding bg-muted/30">
  <div class="container mx-auto px-6 lg:px-8">
    <div class="mx-auto max-w-4xl">
      <div class="mb-12">
        <h2
          class="mb-4 text-3xl font-bold sm:text-4xl font-heading text-foreground"
        >
          Experience & Projects
        </h2>
        <p class="text-muted-foreground">
          Professional and academic experience demonstrating technical
          competence and analytical skills.
        </p>
      </div>

      <div class="space-y-8">
        {
          portfolioData.experience.map((item) => (
            <div class="rounded-lg border border-border bg-card p-6 lg:p-8">
              <div class="mb-4">
                <div class="mb-1 flex flex-wrap items-start justify-between gap-2">
                  <h3 class="text-xl font-bold text-foreground">
                    {item.title}
                  </h3>
                  <span class="text-sm font-medium text-muted-foreground">
                    {item.period}
                  </span>
                </div>
                <p class="text-sm font-medium text-accent">
                  {item.organization}
                </p>
              </div>

              <p class="mb-4 text-foreground/90 leading-relaxed">
                {item.description}
              </p>

              <div class="mb-4">
                <h4 class="mb-3 text-sm font-bold uppercase tracking-wider text-muted-foreground">
                  Key Responsibilities
                </h4>
                <ul class="space-y-2">
                  {item.responsibilities.map((responsibility) => (
                    <li class="flex items-start gap-3 text-sm text-foreground/90">
                      <span class="mt-1.5 h-1.5 w-1.5 flex-shrink-0 rounded-full bg-accent" />
                      <span>{responsibility}</span>
                    </li>
                  ))}
                </ul>
              </div>

              <div class="rounded-md bg-muted/50 p-4 border-l-2 border-accent">
                <p class="text-sm font-medium text-foreground/90">
                  <span class="font-bold text-accent">Impact:</span>{" "}
                  {item.impact}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
