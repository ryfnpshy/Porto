---
import { portfolioData } from "../data/portfolio";
---

<section id="home" class="section-padding pt-24 lg:pt-32">
    <div class="container mx-auto px-6 lg:px-8">
        <div class="mx-auto max-w-3xl text-center">
            <div class="mb-6">
                <span
                    class="inline-block rounded-full border border-accent/30 bg-accent/5 px-4 py-1.5 text-sm font-medium text-accent"
                >
                    Open to Opportunities
                </span>
            </div>

            <h1
                class="mb-6 text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl font-heading text-foreground"
            >
                {portfolioData.hero.title}
            </h1>

            <p
                class="mx-auto mb-10 max-w-2xl text-lg text-muted-foreground leading-relaxed"
            >
                {portfolioData.hero.subtitle}
            </p>

            <div class="flex flex-wrap items-center justify-center gap-4">
                <a
                    href="#summary"
                    class="inline-flex h-11 items-center justify-center rounded-md bg-primary px-8 text-sm font-semibold text-primary-foreground transition-colors hover:bg-primary/90"
                >
                    {portfolioData.hero.cta}
                </a>
                <a
                    href="#contact"
                    class="inline-flex h-11 items-center justify-center rounded-md border border-border bg-background px-8 text-sm font-semibold transition-colors hover:bg-muted"
                >
                    {portfolioData.hero.secondaryCta}
                </a>
            </div>
        </div>
    </div>
</section>
